@{
}

   <h1>Delete Event</h1>

   <form method="post">
      @foreach (Event e in ViewBag.events)
      {
         <div class="form-group input-group mb-3 input-group-text">
               <label>
                  <span>@e.Name</span>
                  <input type="checkbox" name="eventIds" value="@e.Id">
               </label>
         </div>
      }

      <input type="submit" value="Delete Selected Events" class="btn btn-danger">

   </form>