@{
}

@using CodingEvents.Models;
@model List<Event>

<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>
	
@if(Model.Count == 0)
{
    <p>No events yet!</p>
}  
else
{
    <p>
        <a asp-controller="Events" asp-action="Delete">Delete Event</a>
    </p>
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Contact Email</th>
            <th>Location</th>
            <th>Estimated Attendance</th>
            <th>Edit Event</th>
        </tr>
        @foreach (Event e in Model)
        {
            <tr>
                <td>@e.Id</td>
                <td>@e.Name</td>
                <td>@e.Description</td>
                <td>@e.ContactEmail</td>
                <td>@e.Location</td>
                <td>@e.EstAttendance</td>
                <td><a asp-controller="Events" asp-action="Edit" asp-route-id="@e.Id">Edit</a></td>
            </tr>
        }
    </table>

}

