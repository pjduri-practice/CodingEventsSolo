@{
}

<h1>Coding Events</h1>

<p>
   <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>
	
@if(ViewBag.events.Count == 0)
{
    <p>No events yet!</p>
}  
else
{
    <table>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
        </tr>
        @foreach (Event e in ViewBag.events)
        {
            <tr>
                <td>@e.Id</td>
                <td>@e.Name</td>
                <td>@e.Description</td>
            </tr>
        }
    </table>
}

<p>
   <a asp-controller="Events" asp-action="Delete">Delete Event</a>
</p>